  // Formulario con animación de éxito
  document.getElementById('contact-form')?.addEventListener('submit', (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement | null;
    if (!form) return;
    const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement | null;
    if (!btn) return;
    btn.disabled = true;
    btn.textContent = '¡Enviado!';
    btn.classList.add('bg-green-500');
    setTimeout(() => {
      btn.disabled = false;
      btn.textContent = 'Enviar mensaje';
      btn.classList.remove('bg-green-500');
      form.reset();
    }, 1800);
  });

  // Slime Easter Egg
  const slime = document.getElementById('slime');
  slime?.addEventListener('click', () => {
    if (!slime) return;
    const githubBtn = document.querySelector('a[href="https://github.com/Gsus07"]');
    if (!(githubBtn instanceof HTMLAnchorElement)) return;
    // Scroll automático al botón de GitHub si no está visible
    githubBtn.scrollIntoView({ behavior: 'smooth', block: 'center' });
    // Esperar a que el scroll termine (aprox 400ms)
    setTimeout(() => {
      // Obtener posición del slime y del botón de GitHub
      const slimeRect = slime.getBoundingClientRect();
      const btnRect = githubBtn.getBoundingClientRect();
      // Guardar posición original
      const origRight = slime.style.right;
      const origBottom = slime.style.bottom;
      const origPosition = slime.style.position;
      slime.style.position = 'fixed';
      slime.style.right = '';
      slime.style.bottom = '';
      slime.style.left = `${slimeRect.left}px`;
      slime.style.top = `${slimeRect.top}px`;
      slime.style.zIndex = '1000';
      // Calcular destino (centro del botón)
      const startX = slimeRect.left;
      const startY = slimeRect.top;
      const endX = btnRect.left + btnRect.width/2 - slimeRect.width/2;
      const endY = btnRect.top + btnRect.height/2 - slimeRect.height/2;
      // Parámetros de la parábola
      const jumpHeight = Math.max(120, Math.abs(endY - startY) * 0.6); // altura máxima del salto
      const duration = 1100; // ms
      let startTime: number | null = null;
      function animateSlime(ts: number) {
        if (!slime) return;
        if (!startTime) startTime = ts;
        const elapsed = ts - (startTime as number);
        const t = Math.min(elapsed / duration, 1);
        // Interpolación lineal para X
        const x = startX + (endX - startX) * t;
        // Trayectoria parabólica para Y
        const y = startY + (endY - startY) * t - jumpHeight * Math.sin(Math.PI * t);
        slime.style.left = `${x}px`;
        slime.style.top = `${y}px`;
        slime.style.transform = `scale(${1 + 0.2 * Math.sin(Math.PI * t)})`;
        if (t < 1) {
          requestAnimationFrame(animateSlime);
        } else {
          slime.style.left = `${endX}px`;
          slime.style.top = `${endY}px`;
          slime.style.transform = '';
          slime.classList.add('slime-jump'); // rebote final
          setTimeout(() => {
            if (!slime) return;
            slime.classList.remove('slime-jump');
            // Restaurar posición original
            slime.style.position = origPosition || '';
            slime.style.left = '';
            slime.style.top = '';
            slime.style.right = origRight || '32px';
            slime.style.bottom = origBottom || '32px';
            slime.style.zIndex = '60';
            if (githubBtn instanceof HTMLAnchorElement) {
              githubBtn.focus();
              githubBtn.click();
            }
          }, 400);
        }
      }
      requestAnimationFrame(animateSlime);
    }, 400);
  });
