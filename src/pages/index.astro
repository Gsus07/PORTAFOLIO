---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Navbar -->
  <nav
    class="fixed top-0 z-50 w-full bg-white/70 backdrop-blur-lg shadow-xl border-b border-white/30 rounded-b-2xl"
    style="box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);"
  >
    <div
      class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8"
    >
      <a href="/" class="text-2xl font-bold text-indigo-600 hover:text-purple-700 drop-shadow-lg transition-transform duration-300 hover:scale-110">
        JCF
      </a>

      <ul class="hidden gap-8 md:flex">
        <li><a href="#about" class="nav-link transition-colors duration-300 hover:text-purple-600">Acerca de mí</a></li>
        <li><a href="#experience" class="nav-link transition-colors duration-300 hover:text-purple-600">Experiencia</a></li>
        <li><a href="#projects" class="nav-link transition-colors duration-300 hover:text-purple-600">Proyectos</a></li>
        <li><a href="#contact" class="nav-link transition-colors duration-300 hover:text-purple-600">Contacto</a></li>
      </ul>

      <!-- Hamburger (móvil) -->
      <button id="mobile-menu-btn" class="flex flex-col gap-1 md:hidden focus:outline-none">
        <span class="h-0.5 w-6 bg-slate-800 rounded transition-all duration-300"></span>
        <span class="h-0.5 w-6 bg-slate-800 rounded transition-all duration-300"></span>
        <span class="h-0.5 w-6 bg-slate-800 rounded transition-all duration-300"></span>
      </button>
    </div>

    <!-- Menú móvil -->
    <ul
      id="mobile-menu"
      class="hidden flex-col gap-4 bg-white/90 px-4 pb-4 shadow-xl rounded-b-2xl border-b border-white/30 md:hidden"
    >
      <li><a href="#about" class="nav-link transition-colors duration-300 hover:text-purple-600">Acerca de mí</a></li>
      <li><a href="#experience" class="nav-link transition-colors duration-300 hover:text-purple-600">Experiencia</a></li>
      <li><a href="#projects" class="nav-link transition-colors duration-300 hover:text-purple-600">Proyectos</a></li>
      <li><a href="#contact" class="nav-link transition-colors duration-300 hover:text-purple-600">Contacto</a></li>
    </ul>
  </nav>

  <!-- Hero -->
  <section
    id="about"
    class="relative flex min-h-screen items-center bg-gradient-to-br from-indigo-500 via-purple-500 to-purple-600 py-32 text-white overflow-hidden"
    style="background: linear-gradient(120deg, #6366f1 0%, #a78bfa 50%, #9333ea 100%);"
  >
    <!-- Figuras animadas fondo -->
    <div class="absolute inset-0 pointer-events-none z-0">
      <div class="bg-figura1 animate-figura1 absolute top-10 left-10 w-56 h-56 rounded-full opacity-30"></div>
      <div class="bg-figura2 animate-figura2 absolute bottom-0 right-32 w-72 h-72 rounded-full opacity-20"></div>
      <div class="bg-figura3 animate-figura3 absolute top-1/2 left-1/2 w-32 h-32 rounded-full opacity-25"></div>
      <!-- Cuadrados animados -->
      <div class="bg-cuadrado1 animate-cuadrado1 absolute top-24 right-10 w-10 h-10 opacity-30"></div>
      <div class="bg-cuadrado2 animate-cuadrado2 absolute bottom-32 left-32 w-8 h-8 opacity-25"></div>
      <!-- Triángulos animados -->
      <div class="triangulo1 animate-triangulo1 absolute top-1/3 left-1/4 w-0 h-0" style="border-left: 16px solid transparent; border-right: 16px solid transparent; border-bottom: 28px solid #fff; opacity:0.22;"></div>
      <div class="triangulo2 animate-triangulo2 absolute bottom-20 right-1/3 w-0 h-0" style="border-left: 10px solid transparent; border-right: 10px solid transparent; border-bottom: 18px solid #a5b4fc; opacity:0.18;"></div>
      <!-- Líneas cascada electrónica -->
      {Array.from({length: 18}).map((_, i) => (
        <div
          class={`cascada-linea animate-cascada${i%3+1}`}
          style={`left: ${6 + i*5.2}vw; top: -40px; height: ${60 + (i%3)*30}px;`}
        ></div>
      ))}
    </div>
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div
        class="grid items-center gap-12 lg:grid-cols-2 lg:gap-16"
      >
        <div class="flex flex-col items-center text-center lg:items-start lg:text-left animate-fadein">
          <h1 class="text-4xl font-extrabold leading-tight sm:text-5xl md:text-6xl drop-shadow-xl">
            Hola, soy
            <span
              class="block bg-gradient-to-r from-white to-sky-100 bg-clip-text text-transparent"
            >
              Jesús Andrés Cañaveral Florez
            </span>
          </h1>

          <p class="mt-4 max-w-lg text-lg opacity-90">
            Desarrollador y analista apasionado por crear experiencias digitales únicas
          </p>

          <div class="mt-8 flex flex-wrap justify-center gap-4 lg:justify-start">
            <a
              href="https://github.com/Gsus07"
              target="_blank"
              class="flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 text-sm font-medium backdrop-blur-sm transition-all duration-300 hover:bg-white/30 hover:-translate-y-1 hover:scale-105 shadow-lg"
            >
              <img src="/img/github.png" alt="GitHub" class="h-5 w-5" />
              GitHub
            </a>

            <a
              href="https://www.linkedin.com/in/jesus-cañaveral-gsus07"
              target="_blank"
              class="flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 text-sm font-medium backdrop-blur-sm transition-all duration-300 hover:bg-white/30 hover:-translate-y-1 hover:scale-105 shadow-lg"
            >
              <img src="/img/linkedin.png" alt="LinkedIn" class="h-5 w-5" />
              LinkedIn
            </a>
          </div>
        </div>

        <div class="flex justify-center animate-fadein-delay">
          <div
            class="relative flex h-64 w-64 items-center justify-center rounded-full border-2 border-white/20 bg-white/10 backdrop-blur-sm lg:h-80 lg:w-80 shadow-2xl transition-transform duration-300 hover:scale-105 group"
          >
            <img
              src="/img/perf.jpeg"
              alt="Foto de perfil"
              class="h-56 w-56 rounded-full object-cover lg:h-72 lg:w-72 shadow-lg"
            />
            <!-- Mensaje tipo chat -->
            <div class="absolute left-1/2 -translate-x-1/2 -top-8 opacity-0 group-hover:opacity-100 group-hover:-top-16 transition-all duration-300 pointer-events-none z-20">
              <div class="bg-white text-indigo-600 px-4 py-2 rounded-2xl shadow-lg border border-indigo-100 text-sm font-semibold flex items-center gap-2 animate-chat-bounce">
                <svg width="18" height="18" fill="none" viewBox="0 0 24 24"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h15a2 2 0 0 1 2 2v10Z" stroke="#6366f1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                Hola
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

    <!-- Experiencia -->
  <section id="experience" class="bg-white py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-center text-3xl font-bold text-slate-800 sm:text-4xl mb-2">
        Experiencia
      </h2>
      <p class="mt-2 text-center text-slate-600 mb-8">
        Un resumen de mi trayectoria profesional y proyectos destacados.
      </p>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <!-- Ejemplo de experiencia 1 -->
        <div class="rounded-2xl border border-slate-100 bg-white p-6 shadow-md transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl">
          <div class="flex items-center gap-3 mb-2">
            <span class="inline-block rounded-full bg-indigo-500 px-3 py-1 text-xs font-medium text-white">2023 - Actual</span>
            <span class="font-semibold text-slate-800">Desarrollador Fullstack</span>
          </div>
          <p class="text-sm text-slate-600 mb-2">Empresa XYZ</p>
          <ul class="list-disc pl-5 text-slate-600 text-sm">
            <li>Desarrollo de aplicaciones web modernas con React y Node.js.</li>
            <li>Implementación de APIs REST y bases de datos MongoDB.</li>
            <li>Colaboración en equipos ágiles y metodologías SCRUM.</li>
          </ul>
        </div>
        <!-- Ejemplo de experiencia 2 -->
        <div class="rounded-2xl border border-slate-100 bg-white p-6 shadow-md transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl">
          <div class="flex items-center gap-3 mb-2">
            <span class="inline-block rounded-full bg-purple-500 px-3 py-1 text-xs font-medium text-white">2021 - 2023</span>
            <span class="font-semibold text-slate-800">Analista de Datos</span>
          </div>
          <p class="text-sm text-slate-600 mb-2">Empresa ABC</p>
          <ul class="list-disc pl-5 text-slate-600 text-sm">
            <li>Procesamiento y visualización de datos con Python y Power BI.</li>
            <li>Automatización de reportes y análisis estadístico.</li>
            <li>Soporte a áreas de negocio en toma de decisiones.</li>
          </ul>
        </div>
        <!-- Ejemplo de experiencia 3 -->
        <div class="rounded-2xl border border-slate-100 bg-white p-6 shadow-md transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl">
          <div class="flex items-center gap-3 mb-2">
            <span class="inline-block rounded-full bg-sky-500 px-3 py-1 text-xs font-medium text-white">2020 - 2021</span>
            <span class="font-semibold text-slate-800">Práctica Profesional</span>
          </div>
          <p class="text-sm text-slate-600 mb-2">Startup DEF</p>
          <ul class="list-disc pl-5 text-slate-600 text-sm">
            <li>Desarrollo de dashboards interactivos.</li>
            <li>Integración de APIs externas y manejo de bases de datos.</li>
            <li>Aprendizaje de metodologías ágiles y trabajo colaborativo.</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects -->
  <section id="projects" class="bg-white py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-center text-3xl font-bold text-slate-800 sm:text-4xl">
        Mis Proyectos
      </h2>
      <p class="mt-2 text-center text-slate-600">
        Algunos de los trabajos en los que he estado trabajando
      </p>

      <div
        class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3"
      >
        <!-- Proyecto 1 -->
        <div
          class="rounded-2xl border border-slate-100 bg-white p-6 shadow-md transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl group"
        >
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-slate-800 group-hover:text-indigo-600 transition-colors duration-300">Proyecto 1</h3>
            <span
              class="rounded-full bg-indigo-500 px-2 py-0.5 text-xs font-medium text-white"
            >
              En desarrollo
            </span>
          </div>
          <p class="mt-3 text-sm text-slate-600">
            Descripción del proyecto aquí. Tecnologías utilizadas y características principales.
          </p>
          <div class="mt-4 flex flex-wrap gap-2">
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">React</span>
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">Node.js</span>
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">MongoDB</span>
          </div>
          <div class="mt-6 flex gap-4">
            <a
              href="#"
              class="rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 px-4 py-2 text-sm font-medium text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:scale-105 hover:bg-gradient-to-r hover:from-purple-600 hover:to-indigo-500"
            >
              Ver código
            </a>
            <a
              href="#"
              class="rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 px-4 py-2 text-sm font-medium text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:scale-105 hover:bg-gradient-to-r hover:from-purple-600 hover:to-indigo-500"
            >
              Ver demo
            </a>
          </div>
        </div>

        <!-- Proyecto 2 -->
        <div
          class="rounded-2xl border border-slate-100 bg-white p-6 shadow-md transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl group"
        >
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-slate-800 group-hover:text-green-600 transition-colors duration-300">Proyecto 2</h3>
            <span
              class="rounded-full bg-green-600 px-2 py-0.5 text-xs font-medium text-white"
            >
              Completado
            </span>
          </div>
          <p class="mt-3 text-sm text-slate-600">
            Descripción del proyecto aquí. Tecnologías utilizadas y características principales.
          </p>
          <div class="mt-4 flex flex-wrap gap-2">
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">Astro</span>
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">TypeScript</span>
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">CSS</span>
          </div>
          <div class="mt-6 flex gap-4">
            <a
              href="#"
              class="rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 px-4 py-2 text-sm font-medium text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:scale-105 hover:bg-gradient-to-r hover:from-green-600 hover:to-indigo-500"
            >
              Ver código
            </a>
            <a
              href="#"
              class="rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 px-4 py-2 text-sm font-medium text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:scale-105 hover:bg-gradient-to-r hover:from-green-600 hover:to-indigo-500"
            >
              Ver demo
            </a>
          </div>
        </div>

        <!-- Proyecto 3 -->
        <div
          class="rounded-2xl border border-slate-100 bg-white p-6 shadow-md transition-all duration-300 hover:-translate-y-2 hover:scale-105 hover:shadow-2xl group"
        >
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-slate-800 group-hover:text-gray-600 transition-colors duration-300">Proyecto 3</h3>
            <span
              class="rounded-full bg-gray-400 px-2 py-0.5 text-xs font-medium text-white"
            >
              Planeado
            </span>
          </div>
          <p class="mt-3 text-sm text-slate-600">
            Próximo proyecto que tengo en mente. Ideas y tecnologías que planeo utilizar.
          </p>
          <div class="mt-4 flex flex-wrap gap-2">
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">Vue.js</span>
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">Python</span>
            <span class="rounded-full bg-sky-100 px-2 py-0.5 text-xs font-medium text-sky-700">PostgreSQL</span>
          </div>
          <div class="mt-6">
            <span
              class="cursor-not-allowed rounded-full bg-gray-300 px-4 py-2 text-sm font-medium text-gray-500 group-hover:bg-gray-400 group-hover:text-white transition-colors duration-300"
            >
              Próximamente
            </span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="py-24 bg-gradient-to-br from-slate-50 to-indigo-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-center text-3xl font-bold text-slate-800 sm:text-4xl">
        Contacto
      </h2>
      <p class="mt-2 text-center text-slate-600">
        ¿Tienes un proyecto en mente? ¡Hablemos!
      </p>

      <div class="mt-12 grid gap-12 lg:grid-cols-2">
        <div class="space-y-6">
          <!-- Ubicación -->
          <div class="flex items-start gap-4 rounded-2xl bg-white p-4 shadow-md">
            <div
              class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white"
            >
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-slate-800">Ubicación</h3>
              <p class="text-sm text-slate-600">Valledupar, Cesar, Colombia</p>
            </div>
          </div>

          <!-- Email -->
          <div class="flex items-start gap-4 rounded-2xl bg-white p-4 shadow-md">
            <div
              class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white"
            >
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-slate-800">Email</h3>
              <p class="text-sm text-slate-600">jesuscafo15@gmail.com</p>
            </div>
          </div>

          <!-- Teléfono -->
          <div class="flex items-start gap-4 rounded-2xl bg-white p-4 shadow-md">
            <div
              class="flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white"
            >
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 ..."/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-slate-800">Teléfono</h3>
              <p class="text-sm text-slate-600">+573046142863</p>
            </div>
          </div>
        </div>

        <!-- Formulario -->
        <form id="contact-form" class="space-y-6 rounded-2xl bg-white p-6 shadow-md" autocomplete="off">
          <div>
            <input
              type="text"
              placeholder="Tu nombre"
              required
              class="w-full rounded-lg border border-slate-200 p-3 text-sm focus:border-indigo-500 focus:outline-none transition-all duration-300"
            />
          </div>
          <div>
            <input
              type="email"
              placeholder="Tu email"
              required
              class="w-full rounded-lg border border-slate-200 p-3 text-sm focus:border-indigo-500 focus:outline-none transition-all duration-300"
            />
          </div>
          <div>
            <input
              type="text"
              placeholder="Asunto"
              required
              class="w-full rounded-lg border border-slate-200 p-3 text-sm focus:border-indigo-500 focus:outline-none transition-all duration-300"
            />
          </div>
          <div>
            <textarea
              rows="5"
              placeholder="Tu mensaje"
              required
              class="w-full rounded-lg border border-slate-200 p-3 text-sm focus:border-indigo-500 focus:outline-none transition-all duration-300"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 py-3 text-sm font-semibold text-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:scale-105 hover:bg-gradient-to-r hover:from-purple-600 hover:to-indigo-500"
          >
            Enviar mensaje
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-slate-800 py-8 text-center text-sm text-white relative">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center gap-4">
      <div class="flex gap-4 mb-2">
        <a href="https://github.com/Gsus07" target="_blank" class="hover:text-sky-400 transition-colors duration-300">
          <img src="/img/github.png" alt="GitHub" class="h-6 w-6 inline" />
        </a>
        <a href="https://www.linkedin.com/in/jesus-cañaveral-gsus07" target="_blank" class="hover:text-sky-400 transition-colors duration-300">
          <img src="/img/linkedin.png" alt="LinkedIn" class="h-6 w-6 inline" />
        </a>
      </div>
      <span>© 2025 Jesús Andrés Cañaveral Florez. Todos los derechos reservados.</span>
    </div>
    <div class="absolute left-0 right-0 bottom-0 h-2 bg-gradient-to-r from-indigo-500 via-purple-500 to-slate-800 opacity-40"></div>
  </footer>

  <!-- Slime Easter Egg -->
  <div id="slime" title="¡Slime!">
    <svg viewBox="0 0 64 64" width="64" height="64" fill="none">
      <ellipse cx="32" cy="48" rx="24" ry="14" fill="#9333ea" />
      <ellipse cx="32" cy="44" rx="20" ry="10" fill="#a78bfa" />
      <ellipse cx="32" cy="38" rx="16" ry="8" fill="#fff" opacity=".5" />
      <circle cx="24" cy="44" r="4" fill="#fff" />
      <circle cx="40" cy="44" r="4" fill="#fff" />
      <ellipse cx="32" cy="54" rx="8" ry="3" fill="#6366f1" />
      <ellipse cx="32" cy="52" rx="6" ry="2" fill="#fff" opacity=".3" />
      <ellipse cx="32" cy="50" rx="4" ry="1.2" fill="#fff" opacity=".2" />
      <ellipse cx="32" cy="46" rx="2.5" ry="0.7" fill="#fff" opacity=".2" />
      <ellipse cx="32" cy="44" rx="1.5" ry="0.4" fill="#fff" opacity=".2" />
      <ellipse cx="32" cy="42" rx="1" ry="0.2" fill="#fff" opacity=".2" />
      <ellipse cx="32" cy="40" rx="0.5" ry="0.1" fill="#fff" opacity=".2" />
      <ellipse cx="32" cy="38" rx="0.2" ry="0.05" fill="#fff" opacity=".2" />
      <ellipse cx="32" cy="36" rx="0.1" ry="0.02" fill="#fff" opacity=".2" />
      <ellipse cx="32" cy="34" rx="0.05" ry="0.01" fill="#fff" opacity=".2" />
