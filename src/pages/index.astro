---
import Layout from '../layouts/Layout.astro';
import BarraProgreso from '../components/barra-progreso.astro';
import Navbar from '../components/navbar.astro';
import Hero from '../components/hero.astro';
import Skills from '../components/skills.astro';
import Experience from '../components/experience.astro';
import MyProjects from '../components/myprojects.astro';
import Contact from '../components/contact.astro';
import Footer from '../components/footer.astro';
---

<Layout>

  <BarraProgreso />

  <Navbar />

  <Hero />

  <Skills />

  <Experience />

  <MyProjects />

  <Contact />

  <Footer />
</Layout>

<style>
  /* Scroll suave para toda la p치gina */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px; /* Compensar la altura del navbar fijo */
  }
  /* Animaci칩n suave para el scroll */
  .section-transition {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .section-transition.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Transici칩n suave para el navbar al hacer scroll */
  nav {
    transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
  }
  /* Validaci칩n visual para formulario */
  input:invalid, textarea:invalid {
    border-color: #f87171;
    box-shadow: 0 0 0 2px #f8717133;
  }
  input:focus:invalid, textarea:focus:invalid {
    border-color: #ef4444;
    box-shadow: 0 0 0 2px #ef444433;
  }
  /* Efecto de entrada suave para las secciones */
  .section-fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .section-fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Mejoras en los botones */
  .btn-enhanced {
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn-enhanced::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .btn-enhanced:hover::before {
    left: 100%;
  }
</style>
