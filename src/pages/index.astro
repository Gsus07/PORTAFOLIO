---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout>

  <!-- Barra de progreso -->
  <div id="progress-container" class="fixed top-0 left-0 w-full h-1 bg-white/20 z-[60] transition-opacity duration-300">
    <div id="progress-bar" class="h-full bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 transition-all duration-300 ease-out" style="width: 0%"></div>
  </div>

  <!-- Navbar -->
  <nav
    class="fixed top-1 z-50 w-full bg-white/70 backdrop-blur-lg shadow-xl border-b border-white/30 rounded-b-2xl transition-all duration-300 ease-in-out"
    style="box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);"
  >
    <div
      class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8"
    >
      <a href="/" class="logo-shine text-2xl font-bold text-indigo-600 hover:text-purple-700 drop-shadow-lg transition-all duration-700 ease-out hover:scale-110 hover:drop-shadow-2xl">
        JCF
      </a>

      <ul class="hidden gap-8 md:flex">
        <li class="relative group">
          <a href="#about" data-section="about" class="nav-link text-slate-700 transition-all duration-300 ease-out hover:text-purple-600 relative px-4 py-3 rounded-lg hover:bg-white/15 hover:shadow-lg hover:-translate-y-0.5">
            <span class="flex items-center gap-2">
              <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
              Acerca de mí
            </span>
            <span class="absolute bottom-1 left-1/2 w-0 h-0.5 bg-gradient-to-r from-purple-500 to-indigo-500 transition-all duration-300 ease-out group-hover:w-full group-hover:left-0 rounded-full"></span>
          </a>
        </li>
        <li class="relative group">
          <a href="#skills" data-section="skills" class="nav-link text-slate-700 transition-all duration-300 ease-out hover:text-purple-600 relative px-4 py-3 rounded-lg hover:bg-white/15 hover:shadow-lg hover:-translate-y-0.5">
            <span class="flex items-center gap-2">
              <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
              Habilidades
            </span>
            <span class="absolute bottom-1 left-1/2 w-0 h-0.5 bg-gradient-to-r from-purple-500 to-indigo-500 transition-all duration-300 ease-out group-hover:w-full group-hover:left-0 rounded-full"></span>
          </a>
        </li>
        <li class="relative group">
          <a href="#experience" data-section="experience" class="nav-link text-slate-700 transition-all duration-300 ease-out hover:text-purple-600 relative px-4 py-3 rounded-lg hover:bg-white/15 hover:shadow-lg hover:-translate-y-0.5">
            <span class="flex items-center gap-2">
              <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
              Experiencia
            </span>
            <span class="absolute bottom-1 left-1/2 w-0 h-0.5 bg-gradient-to-r from-purple-500 to-indigo-500 transition-all duration-300 ease-out group-hover:w-full group-hover:left-0 rounded-full"></span>
          </a>
        </li>
        <li class="relative group">
          <a href="#projects" data-section="projects" class="nav-link text-slate-700 transition-all duration-300 ease-out hover:text-purple-600 relative px-4 py-3 rounded-lg hover:bg-white/15 hover:shadow-lg hover:-translate-y-0.5">
            <span class="flex items-center gap-2">
              <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
              Proyectos
            </span>
            <span class="absolute bottom-1 left-1/2 w-0 h-0.5 bg-gradient-to-r from-purple-500 to-indigo-500 transition-all duration-300 ease-out group-hover:w-full group-hover:left-0 rounded-full"></span>
          </a>
        </li>
        <li class="relative group">
          <a href="#contact" data-section="contact" class="nav-link text-slate-700 transition-all duration-300 ease-out hover:text-purple-600 relative px-4 py-3 rounded-lg hover:bg-white/15 hover:shadow-lg hover:-translate-y-0.5">
            <span class="flex items-center gap-2">
              <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
              Contacto
            </span>
            <span class="absolute bottom-1 left-1/2 w-0 h-0.5 bg-gradient-to-r from-purple-500 to-indigo-500 transition-all duration-300 ease-out group-hover:w-full group-hover:left-0 rounded-full"></span>
          </a>
        </li>
      </ul>



      <!-- Hamburger (móvil) -->
      <button id="mobile-menu-btn" class="flex flex-col gap-1 md:hidden focus:outline-none p-3 rounded-xl hover:bg-white/20 transition-all duration-500 hover:scale-110 active:scale-95">
        <span class="hamburger-line h-0.5 w-6 bg-slate-800 rounded transition-all duration-500 ease-in-out"></span>
        <span class="hamburger-line h-0.5 w-6 bg-slate-800 rounded transition-all duration-500 ease-in-out"></span>
        <span class="hamburger-line h-0.5 w-6 bg-slate-800 rounded transition-all duration-500 ease-in-out"></span>
      </button>
    </div>

    <!-- Menú móvil -->
    <ul
      id="mobile-menu"
      class="hidden flex-col gap-4 bg-white/90 px-4 pb-4 shadow-xl rounded-b-2xl border-b border-white/30 md:hidden transition-all duration-300 ease-in-out"
    >
      <li class="relative group mobile-menu-item opacity-0 translate-y-2">
        <a href="#about" data-section="about" class="nav-link text-slate-700 transition-all duration-200 ease-out hover:text-purple-600 block px-4 py-3 rounded-lg hover:bg-white/20 hover:shadow-md hover:translate-x-1">
          <span class="flex items-center gap-2">
            <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
            Acerca de mí
          </span>
        </a>
      </li>
      <li class="relative group mobile-menu-item opacity-0 translate-y-2">
        <a href="#skills" data-section="skills" class="nav-link text-slate-700 transition-all duration-200 ease-out hover:text-purple-600 block px-4 py-3 rounded-lg hover:bg-white/20 hover:shadow-md hover:translate-x-1">
          <span class="flex items-center gap-2">
            <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
            Habilidades
          </span>
        </a>
      </li>
      <li class="relative group mobile-menu-item opacity-0 translate-y-2">
        <a href="#experience" data-section="experience" class="nav-link text-slate-700 transition-all duration-200 ease-out hover:text-purple-600 block px-4 py-3 rounded-lg hover:bg-white/20 hover:shadow-md hover:translate-x-1">
          <span class="flex items-center gap-2">
            <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
            Experiencia
          </span>
        </a>
      </li>
      <li class="relative group mobile-menu-item opacity-0 translate-y-2">
        <a href="#projects" data-section="projects" class="nav-link text-slate-700 transition-all duration-200 ease-out hover:text-purple-600 block px-4 py-3 rounded-lg hover:bg-white/20 hover:shadow-md hover:translate-x-1">
          <span class="flex items-center gap-2">
            <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
            Proyectos
          </span>
        </a>
      </li>
      <li class="relative group mobile-menu-item opacity-0 translate-y-2">
        <a href="#contact" data-section="contact" class="nav-link text-slate-700 transition-all duration-200 ease-out hover:text-purple-600 block px-4 py-3 rounded-lg hover:bg-white/20 hover:shadow-md hover:translate-x-1">
          <span class="flex items-center gap-2">
            <span class="section-indicator w-2 h-2 rounded-full bg-slate-300 transition-all duration-300"></span>
            Contacto
          </span>
        </a>
      </li>
    </ul>
  </nav>

  <!-- Hero -->
  <section
    id="about"
    class="relative flex min-h-screen items-center bg-gradient-to-br from-indigo-500 via-purple-500 to-purple-600 py-32 text-white overflow-hidden"
    style="background: linear-gradient(120deg, #6366f1 0%, #a78bfa 50%, #9333ea 100%);"
  >
    <!-- Contenedor de partículas espaciales -->
    <div id="space-particles" class="absolute inset-0 pointer-events-none z-[1] overflow-hidden"></div>
    
    <!-- Figuras animadas fondo -->
    <div class="absolute inset-0 pointer-events-none z-0">
      <div class="bg-figura1 animate-figura1 absolute top-10 left-10 w-56 h-56 rounded-full opacity-30"></div>
      <div class="bg-figura2 animate-figura2 absolute bottom-0 right-32 w-72 h-72 rounded-full opacity-20"></div>
      <div class="bg-figura3 animate-figura3 absolute top-1/2 left-1/2 w-32 h-32 rounded-full opacity-25"></div>
      <!-- Cuadrados animados -->
      <div class="bg-cuadrado1 animate-cuadrado1 absolute top-24 right-10 w-10 h-10 opacity-30"></div>
      <div class="bg-cuadrado2 animate-cuadrado2 absolute bottom-32 left-32 w-8 h-8 opacity-25"></div>
      <!-- Triángulos animados -->
      <div class="triangulo1 animate-triangulo1 absolute top-1/3 left-1/4 w-0 h-0" style="border-left: 16px solid transparent; border-right: 16px solid transparent; border-bottom: 28px solid #fff; opacity:0.22;"></div>
      <div class="triangulo2 animate-triangulo2 absolute bottom-20 right-1/3 w-0 h-0" style="border-left: 10px solid transparent; border-right: 10px solid transparent; border-bottom: 18px solid #a5b4fc; opacity:0.18;"></div>
      <!-- Líneas cascada electrónica -->
      {Array.from({length: 18}).map((_, i) => (
        <div
          class={`cascada-linea animate-cascada${i%3+1}`}
          style={`left: ${6 + i*5.2}vw; top: -40px; height: ${60 + (i%3)*30}px;`}
        ></div>
      ))}
    </div>
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div
        class="grid items-center gap-12 lg:grid-cols-2 lg:gap-16"
      >
        <div class="flex flex-col items-center text-center lg:items-start lg:text-left animate-fadein">
          <h1 class="text-4xl font-extrabold leading-tight sm:text-5xl md:text-6xl drop-shadow-xl">
            <span id="greeting-text"></span>
            <span
              class="block bg-gradient-to-r from-white to-sky-100 bg-clip-text text-transparent"
              id="name-text"
            >
            </span>
          </h1>

          <p class="mt-4 max-w-lg text-lg opacity-90" id="description-text">
          </p>

          <div class="mt-8 flex flex-wrap justify-center gap-4 lg:justify-start">
            <a
              href="https://github.com/Gsus07"
              target="_blank"
              class="flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 text-sm font-medium backdrop-blur-sm transition-all duration-300 hover:bg-white/30 hover:-translate-y-1 hover:scale-105 shadow-lg"
            >
              <img src="/img/github.png" alt="GitHub" class="h-5 w-5" />
              GitHub
            </a>

            <a
              href="https://www.linkedin.com/in/jesus-cañaveral-gsus07"
              target="_blank"
              class="flex items-center gap-2 rounded-full border border-white/20 bg-white/10 px-4 py-2 text-sm font-medium backdrop-blur-sm transition-all duration-300 hover:bg-white/30 hover:-translate-y-1 hover:scale-105 shadow-lg"
            >
              <img src="/img/linkedin.png" alt="LinkedIn" class="h-5 w-5" />
              LinkedIn
            </a>
          </div>
        </div>

        <div class="flex justify-center animate-fadein-delay">
          <div
            class="relative flex h-64 w-64 items-center justify-center rounded-full border-2 border-white/20 bg-white/10 backdrop-blur-sm lg:h-80 lg:w-80 shadow-2xl transition-transform duration-300 hover:scale-105 group"
          >
            <div class="profile-img-container group">
              <img
                src="/img/YO.jpeg"
                alt="Foto principal"
                class="profile-img front h-56 w-56 rounded-full object-cover lg:h-72 lg:w-72 shadow-lg transition-transform duration-700"
              />
              <img
                src="/img/perf.jpeg"
                alt="Foto alternativa"
                class="profile-img back h-56 w-56 rounded-full object-cover lg:h-72 lg:w-72 shadow-lg transition-transform duration-700"
              />
            </div>
            <!-- Mensaje tipo chat -->
            <div class="absolute left-1/2 -translate-x-1/2 -top-8 opacity-0 group-hover:opacity-100 group-hover:-top-16 transition-all duration-300 pointer-events-none z-20">
              <div class="bg-white text-indigo-600 px-4 py-2 rounded-2xl shadow-lg border border-indigo-100 text-sm font-semibold flex items-center gap-2 animate-chat-bounce">
                <svg width="18" height="18" fill="none" viewBox="0 0 24 24"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h15a2 2 0 0 1 2 2v10Z" stroke="#6366f1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                Hola
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Habilidades -->
  <section id="skills" class="py-24 bg-gradient-to-br from-slate-50 via-indigo-50 to-purple-50 relative overflow-hidden">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-br from-indigo-200 to-purple-200 rounded-full opacity-20 animate-float-slow"></div>
      <div class="absolute bottom-20 right-20 w-24 h-24 bg-gradient-to-br from-purple-200 to-pink-200 rounded-full opacity-30 animate-float-medium"></div>
      <div class="absolute top-1/2 left-1/3 w-16 h-16 bg-gradient-to-br from-sky-200 to-indigo-200 rounded-full opacity-25 animate-float-fast"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-800 sm:text-4xl mb-4">
          Habilidades Técnicas
        </h2>
        <p class="text-slate-600 max-w-2xl mx-auto">
          Tecnologías y herramientas que domino para crear experiencias digitales excepcionales
        </p>
      </div>

      <div class="grid gap-6 grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6">
        <!-- Frontend -->
        <div class="skill-card group">
          <div class="skill-icon bg-gradient-to-br from-orange-400 to-red-500">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M1.5 0h21l-1.91 21.563L11.977 24l-8.564-2.438L1.5 0zm7.031 9.75l-.232-2.718 10.059.003.23-2.622L5.412 4.41l.698 8.01h9.126l-.326 3.426-2.91.804-2.955-.81-.188-2.11H6.248l.33 4.171L12 19.351l5.379-1.443.744-8.157H8.531z"/>
            </svg>
          </div>
          <h3 class="skill-title">HTML5</h3>
        </div>

        <div class="skill-card group">
          <div class="skill-icon bg-gradient-to-br from-blue-400 to-blue-600">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M1.5 0h21l-1.91 21.563L11.977 24l-8.564-2.438L1.5 0zm17.09 4.413L5.41 4.41l.213 2.622 10.125.002-.255 2.716h-6.64l.24 2.573h6.182l-.366 3.523-2.91.804-2.956-.81-.188-2.11h-2.61l.29 3.855L12 19.288l5.373-1.53L18.59 4.414z"/>
            </svg>
          </div>
          <h3 class="skill-title">CSS3</h3>
        </div>

        <div class="skill-card group">
          <div class="skill-icon bg-gradient-to-br from-yellow-400 to-orange-500">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M0 0h24v24H0V0zm22.034 18.276c-.175-1.095-.888-2.015-3.003-2.873-.736-.345-1.554-.585-1.797-1.14-.091-.33-.105-.51-.046-.705.15-.646.915-.84 1.515-.66.39.12.75.42.976.9 1.034-.676 1.034-.676 1.755-1.125-.27-.42-.404-.601-.586-.78-.63-.705-1.469-1.065-2.834-1.034l-.705.089c-.676.165-1.32.525-1.71 1.005-1.14 1.291-.811 3.541.569 4.471 1.365 1.02 3.361 1.244 3.616 2.205.24 1.17-.87 1.545-1.966 1.41-.811-.18-1.26-.586-1.755-1.336l-1.83 1.051c.21.48.45.689.81 1.109 1.74 1.756 6.09 1.666 6.871-1.004.029-.09.24-.705.074-1.65l.046.067zm-8.983-7.245h-2.248c0 1.938-.009 3.864-.009 5.805 0 1.232.063 2.363-.138 2.711-.33.689-1.18.601-1.566.48-.396-.196-.597-.466-.83-.855-.063-.105-.11-.196-.127-.196l-1.825 1.125c.305.63.75 1.172 1.324 1.517.855.51 2.004.675 3.207.405.783-.226 1.458-.691 1.811-1.411.51-.93.402-2.07.397-3.346.012-2.054 0-4.109 0-6.179l.004-.056z"/>
            </svg>
          </div>
          <h3 class="skill-title">JavaScript</h3>
        </div>

        <div class="skill-card group">
          <div class="skill-icon bg-gradient-to-br from-cyan-400 to-blue-500">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.23 12.004a2.236 2.236 0 0 1-2.235 2.236 2.236 2.236 0 0 1-2.236-2.236 2.236 2.236 0 0 1 2.235-2.236 2.236 2.236 0 0 1 2.236 2.236zm2.648-10.69c-1.346 0-3.107.96-4.888 2.622-1.78-1.653-3.542-2.602-4.887-2.602-.41 0-.783.093-1.106.278-1.375.793-1.683 3.264-.973 6.365C1.98 8.917 0 10.42 0 12.004c0 1.59 1.99 3.097 5.043 4.03-.704 3.113-.39 5.588.988 6.38.32.187.69.275 1.102.275 1.345 0 3.107-.96 4.888-2.624 1.78 1.654 3.542 2.603 4.887 2.603.41 0 .783-.09 1.106-.275 1.374-.792 1.683-3.263.973-6.365C22.02 15.096 24 13.59 24 12.004c0-1.59-1.99-3.097-5.043-4.032.704-3.11.39-5.587-.988-6.38-.318-.184-.688-.277-1.092-.278zm-.005 1.09v.006c.225 0 .406.044.558.127.666.382.955 1.835.73 3.704-.054.46-.142.945-.25 1.44-.96-.236-2.006-.417-3.107-.534-.66-.905-1.345-1.727-2.035-2.447 1.592-1.48 3.087-2.292 4.105-2.295zm-9.77.02c1.012 0 2.514.808 4.11 2.28-.686.72-1.37 1.537-2.02 2.442-1.107.117-2.154.298-3.113.538-.112-.49-.195-.964-.254-1.42-.23-1.868.054-3.32.714-3.707.19-.09.4-.127.563-.132zm4.882 3.05c.455.468.91.992 1.36 1.564-.44-.02-.89-.034-1.36-.034-.47 0-.92.014-1.36.034.44-.572.895-1.096 1.36-1.564zM12 8.1c.74 0 1.477.034 2.202.093.406.582.802 1.203 1.183 1.86.372.64.71 1.29 1.018 1.946-.308.655-.646 1.31-1.013 1.95-.38.66-.773 1.288-1.18 1.87-.728.063-1.466.098-2.21.098-.74 0-1.477-.035-2.202-.093-.406-.582-.802-1.204-1.183-1.86-.372-.64-.71-1.29-1.018-1.946.303-.657.646-1.313 1.013-1.954.38-.66.773-1.286 1.18-1.868.728-.064 1.466-.098 2.21-.098zm-3.635.254c-.24.377-.48.763-.704 1.16-.225.39-.435.782-.635 1.174-.265-.656-.49-1.31-.676-1.947.64-.15 1.315-.283 2.015-.386zm7.26 0c.695.103 1.365.23 2.006.387-.18.632-.405 1.282-.66 1.933-.2-.39-.41-.783-.64-1.174-.225-.392-.465-.774-.705-1.146zm3.063.675c.484.15.944.317 1.375.498 1.732.74 2.852 1.708 2.852 2.476-.005.768-1.125 1.74-2.857 2.475-.42.18-.88.342-1.355.493-.28-.958-.646-1.956-1.1-2.98.45-1.017.81-2.01 1.085-2.964zm-13.395.004c.278.96.645 1.957 1.1 2.98-.45 1.017-.812 2.01-1.086 2.964-.4