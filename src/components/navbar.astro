<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Navbar móvil con transiciones mejoradas
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const navbar = document.querySelector('nav');
    
    if (btn && menu) {
      btn.addEventListener('click', () => {
        const isHidden = menu.classList.contains('hidden');
        
        if (isHidden) {
          // Abrir menú
          menu.classList.remove('hidden');
          btn.classList.add('hamburger-active');
          
          // Pequeño delay para permitir que el display: flex tome efecto
          setTimeout(() => {
            menu.classList.add('show');
          }, 50);
        } else {
          // Cerrar menú
          menu.classList.remove('show');
          btn.classList.remove('hamburger-active');
          
          // Esperar a que termine la animación antes de ocultar
          setTimeout(() => {
            menu.classList.add('hidden');
          }, 300);
        }
      });
    }

    // Cerrar al click en enlace
    const mobileLinks = document.querySelectorAll('#mobile-menu a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (menu && btn) {
          // Cerrar menú inmediatamente
          menu.classList.remove('show');
          btn.classList.remove('hamburger-active');
          
          setTimeout(() => {
            menu.classList.add('hidden');
          }, 150);
        }
      });
    });

    // Efectos de hover mejorados para navegación
    const navItems = document.querySelectorAll('.nav-item');
    navItems.forEach((item, index) => {
      const link = item.querySelector('.nav-link');
      const indicator = item.querySelector('.section-indicator');
      
      if (!link) return;
      
      // Colores específicos para cada sección
      const colors = [
        { primary: '#9333ea', secondary: '#6366f1', name: 'purple' },
        { primary: '#3b82f6', secondary: '#06b6d4', name: 'blue' },
        { primary: '#10b981', secondary: '#14b8a6', name: 'emerald' },
        { primary: '#f97316', secondary: '#ef4444', name: 'orange' },
        { primary: '#ec4899', secondary: '#f43f5e', name: 'pink' }
      ];
      
      const color = colors[index] || colors[0];
      
      item.addEventListener('mouseenter', () => {
        // Crear efecto de partículas dinámicas
        createHoverParticles(link as HTMLElement, color.primary);
        
        // Vibración sutil en dispositivos compatibles
        if (navigator.vibrate) {
          try {
            navigator.vibrate(10);
          } catch (e) {
            // Silenciosamente fallar si no es compatible
          }
        }
        
        // Efecto de sonido suave (opcional)
        playHoverSound();
      });
      
      item.addEventListener('mouseleave', () => {
        // Limpiar partículas
        clearHoverParticles(link as HTMLElement);
      });
    });

    // Función para crear partículas en hover
    function createHoverParticles(element: HTMLElement, color: string) {
      if (!element) return;
      
      const particleCount = 3;
      
      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'hover-particle';
        particle.style.cssText = `
          position: absolute;
          width: 3px;
          height: 3px;
          background: ${color};
          border-radius: 50%;
          pointer-events: none;
          z-index: 1000;
          opacity: 0.8;
          box-shadow: 0 0 6px ${color};
        `;
        
        // Posición aleatoria dentro del elemento
        const rect = element.getBoundingClientRect();
        const x = Math.random() * (rect.width - 6);
        const y = Math.random() * (rect.height - 6);
        
        particle.style.left = `${x}px`;
        particle.style.top = `${y}px`;
        
        element.appendChild(particle);
        
        // Animar partícula
        const animation = particle.animate([
          { 
            transform: 'translate(0, 0) scale(1)', 
            opacity: 0.8 
          },
          { 
            transform: `translate(${(Math.random() - 0.5) * 20}px, ${-10 - Math.random() * 10}px) scale(0)`, 
            opacity: 0 
          }
        ], {
          duration: 800 + Math.random() * 400,
          easing: 'ease-out'
        });
        
        animation.onfinish = () => {
          if (particle.parentNode) {
            particle.parentNode.removeChild(particle);
          }
        };
      }
    }

    // Función para limpiar partículas
    function clearHoverParticles(element: HTMLElement) {
      if (!element) return;
      
      const particles = element.querySelectorAll('.hover-particle');
      particles.forEach(particle => {
        if (particle.parentNode) {
          particle.parentNode.removeChild(particle);
        }
      });
    }

