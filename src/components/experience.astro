<style>
  /* Estilos para el timeline de experiencia */
  .timeline-item {
    opacity: 0;
    transform: translateY(30px);
    animation: timeline-fade-in 0.8s ease-out forwards;
  }

  .timeline-item:nth-child(2) {
    animation-delay: 0.2s;
  }

  .timeline-item:nth-child(3) {
    animation-delay: 0.4s;
  }

  .timeline-card {
    position: relative;
    overflow: hidden;
  }

  .timeline-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.5s;
  }

  .timeline-card:hover::before {
    left: 100%;
  }

  .timeline-dot {
    position: relative;
    animation: pulse-dot 2s infinite;
  }

  .timeline-card-mobile {
    opacity: 0;
    transform: translateY(20px);
    animation: mobile-card-fade-in 0.6s ease-out forwards;
  }

  .timeline-card-mobile:nth-child(2) {
    animation-delay: 0.2s;
  }

  .timeline-card-mobile:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes timeline-fade-in {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes mobile-card-fade-in {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-dot {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(99, 102, 241, 0);
    }
  }

  /* Responsive timeline */
  @media (max-width: 768px) {
    .timeline-item {
      display: none;
    }
  }

  /* Animaciones de flotación para elementos decorativos */
  @keyframes float-slow {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg);
    }
    50% { 
      transform: translateY(-20px) rotate(5deg);
    }
  }

  @keyframes float-medium {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg);
    }
    50% { 
      transform: translateY(-15px) rotate(-3deg);
    }
  }

  .animate-float-slow {
    animation: float-slow 6s ease-in-out infinite;
  }

  .animate-float-medium {
    animation: float-medium 4s ease-in-out infinite;
  }
</style>